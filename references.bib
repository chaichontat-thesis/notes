@article{pascoal18FMK6240PET2020,
  title = {{{18F-MK-6240 PET}} for Early and Late Detection of Neurofibrillary Tangles},
  author = {Pascoal, Tharick A and Therriault, Joseph and Benedet, Andrea L and Savard, Melissa and Lussier, Firoza Z and Chamoun, Mira and Tissot, C{\'e}cile and Qureshi, Muhammad Naveed Iqbal and Kang, Min Su and Mathotaarachchi, Sulantha and Stevenson, Jenna and Hopewell, Robert and Massarweh, Gassan and Soucy, Jean-Paul and Gauthier, Serge and {Rosa-Neto}, Pedro},
