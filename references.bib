@article{clarkeExecutableCancer2020,
  title = {Executable Cancer Models: Successes and Challenges},
  shorttitle = {Executable Cancer Models},
  author = {Clarke, Matthew A. and Fisher, Jasmin},
  year = {2020},
  month = jun,
  journal = {Nat Rev Cancer},
