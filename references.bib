  shorttitle = {Whole {{Brain Vessel Graphs}}},
  author = {Paetzold, Johannes C. and McGinnis, Julian and Shit, Suprosanna and Ezhov, Ivan and B{\"u}schl, Paul and Prabhakar, Chinmay and Todorov, Mihail I. and Sekuboyina, Anjany and Kaissis, Georgios and Ert{\"u}rk, Ali and G{\"u}nnemann, Stephan and Menze, Bjoern H.},
