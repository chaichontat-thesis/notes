  author = {Schalk, Gerwin and Kapeller, Christoph and Guger, Christoph and Ogawa, Hiroshi and Hiroshima, Satoru and {Lafer-Sousa}, Rosa and Saygin, Zeynep M. and Kamada, Kyousuke and Kanwisher, Nancy},
