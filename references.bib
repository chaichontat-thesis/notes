  copyright = {Copyright \textcopyright{} 2016 the authors 0270-6474/16/3610584-14\$15.00/0},
  langid = {english},
  pmid = {27733610},
  keywords = {auditory nerve fiber,development,hair cell,intrinsic firing,refractoriness,spontaneous rate}
}

